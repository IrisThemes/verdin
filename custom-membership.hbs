function check() {
  var checkBox = document.getElementById("checbox");
       var tiersBox = document.getElementsByClassName("verdin-tiers");



    checkBox.onclick = function(){
        console.log('1');
   

        tiersBox.classList.add('verdin-active');
    };


}
check();

</script>
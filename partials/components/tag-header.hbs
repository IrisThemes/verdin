<section class="verdin-archive mb-4 mt-2">

    <header class="verdin-list-header verdin-cta">

        <div class="verdin-cta-inner">

            <div class="verdin-cta-content">
                
                <h1 class="bolder mb-0 lh-1">{{name}}</h1>
                {{#if description}}
                    <p class="verdin-archive-description mt-2">{{description}}</p>
                {{/if}}

            </div>

            {{#if feature_image}}
            <figure class="verdin-archive-image">
                <img srcset="{{img_url feature_image size="s"}} 300w,
                                        {{img_url feature_image size="m"}} 720w,
                                        {{img_url feature_image size="m"}} 960w,
                                        {{img_url feature_image size="m"}} 1200w,
                                        {{img_url feature_image size="m"}} 2000w"
                    sizes="(max-width: 1200px) 100vw, 1200px" src="{{img_url feature_image size="m"}}"
                    alt="{{name}}">
            </figure>
            {{/if}}

        </div>

    </header>

</section>
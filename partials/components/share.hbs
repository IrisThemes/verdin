<div class="verdin-share verdin-sticky-item">

<span class="verdin-list-item-meta">{{t "Share this article"}}</span>

<ul class="verdin-share-list">
    <li class="verdin-share-item">
        <a class="verdin-share-link twitter" title="{{t "Share on Twitter" }}" aria-label="{{t "Share on Twitter" }}"
            href="https://twitter.com/share?text={{ encode title }}&amp;url={{ url absolute='true' }}"
            onclick="window.open(this.href, 'twitter-share', 'width=550, height=300'); return false;">
            {{> "icons/twitter"}}
        </a>
    </li>

    <li class="verdin-share-item">
        <a class="verdin-share-link facebook" title="{{t "Share on Facebook" }}" aria-label="{{t "Share on Facebook" }}"
            href="https://www.facebook.com/sharer/sharer.php?u={{ url absolute='true' }}"
            onclick="window.open(this.href, 'facebook-share', 'width=580, height=300'); return false;">
            {{> "icons/facebook"}}
        </a>
    </li>

    <li class="verdin-share-item">
        <a class="verdin-share-link linkedin" title="{{t "Share on LinkedIn" }}" aria-label="{{t "Share on LinkedIn" }}"
            href="https://www.linkedin.com/shareArticle?mini=true&url={{ url absolute='true' }}&title={{ encode title }}"
            onclick="window.open(this.href, 'linkedin-share', 'width=580, height=300'); return false;">
            {{> "icons/linkedin"}}
        </a>
    </li>

    <li class="verdin-share-item">
        <a href="#" onclick="return false;" title="{{t "Share on Reddit" }}" class="verdin-share-link reddit" data-url="http://www.reddit.com/submit?url={{ url absolute='true' }}&title={{ encode title }}"> 
        {{> "icons/reddit"}}
        </a>
    </li>

    <li class="verdin-share-item">
        <a class="verdin-share-link pinterest" title="{{t "Share on Pinterest" }}"
            aria-label="{{t "Share on Pinterest" }}"
            href="https://pinterest.com/pin/create/button/?url={{ url absolute='true' }}&media={{ feature_image }}&description={{ encode title }}"
            onclick="window.open(this.href, 'pinterest-share', 'width=580, height=300'); return false;">
            {{> "icons/pinterest"}}
        </a>
    </li>

    <li class="verdin-share-item">
        <a class="verdin-share-link email" title="{{t "Share via Email" }}" aria-label="{{t "Share via Email" }}"
            href="mailto:?subject={{ encode title }}&body={{ url absolute='true' }}">
            {{> "icons/email"}}
        </a>
    </li>

</ul>
</div>
{{!--
    Parameters:
    * action (button, search)
--}}

<section class="verdin-header verdin-outer gh-head">
    <div class="verdin-header-inner ">
       
            <div class="verdin-head-brand">
                <div class="verdin-head-brand-main">
                <a class="verdin-head-logo{{#unless @site.logo}} no-image{{/unless}} h2 bolder" href="{{@site.url}}">
                    {{#if @site.logo}}
                        <img src="{{@site.logo}}" alt="{{@site.title}}">
                    {{else}}
                        {{@site.title}}
                    {{/if}}
                </a> 

                <div class="verdin-mobile-actions">
                    <a href="" class="verdin-search verdin-lg-hide show-on-md-flex" aria-label="Search this site" data-ghost-search>{{> "icons/search"}}</a>
                    <div class="verdin-burger verdin-burger-box show-on-md gh-burger"><div class="verdin-burger-inner"></div></div>
                </div>

                </div>

                <div class="verdin-head-main-content">

                    <nav class="verdin-head-menu hide-on-md">
                        {{navigation}}      
                    </nav>  

                </div>

            </div>   

            <div class="verdin-head-actions hide-on-md">

                    <div class="verdin-head-members">
                        {{#unless @member}}
                            {{#unless @site.members_invite_only}}
                                <a class="verdin-head-link" href="#/portal/signin" data-portal="signin">{{t "Sign in"}}</a>
                                <a class="verdin-head-btn verdin-btn verdin-primary-btn" href="#/portal/signup" data-portal="signup">{{t "Subscribe"}}</a>
                            {{else}}
                                <a class="verdin-head-btn verdin-btn verdin-primary-btn" href="#/portal/signin" data-portal="signin">{{t "Sign in"}}</a>
                            {{/unless}}
                        {{else}}
                            <a class="verdin-head-btn verdin-btn verdin-primary-btn" href="#/portal/account" data-portal="account">{{t "Account"}}</a>
                        {{/unless}}
                    </div>

            </div>
            

      

    </div>
</section>

<section class="verdin-sidebar-header hide-on-md">
    <button class="verdin-search verdin-icon-btn" aria-label="Search this site" data-ghost-search>{{> "icons/search"}}</button>
</section>